{
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "es2020",
    "target": "ES2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src"
  },

  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": ["node_modules", "dist"]
}
